extends _base

block append head
    script(src='https://d3js.org/d3.v5.min.js')
    script(src='/lib/d3-tip.js')
    script(src='/views/projectInfo.js')
    script(src='/views/jrcTaxonomyFilterModal.js')
    style(type="text/css").
        #tooltip {
            position: absolute;
            background: black;
            color: white;
            padding: 0.3em;
            width: fit-content;
            height: fit-content;
            z-index: 3;
            display: none;
        }

//- Main content block for the page.
block content
    //- The radar section
    section#radar
        //- Radar title, description, etc
        section#overview
            h1 #{radar.name}
            #summary-container 
                #scroller
                    #summary #{radar.summary}
                #flicker
                    #summary-flicker &#x2303
        //- any filters for the radar blips
        section#filters
            section#other
                include jrc-tagfilter
            include search
        //- the radar and the project tables
        section#radardata
            #rendering
                != radar.rendering.rendering.get('svg')
            #tables
                != radar.rendering.rendering.get('tables')
        //- the blip tooltip
        #tooltip
