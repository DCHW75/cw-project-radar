{
    "name": "cw-project-radar",
    "version": "0.0.1",
    "description": "A re-implementation of the ThoughtWorks Technology Radar using express, webpack, MongoDB and many other goodies.",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "start:prod": "NODE_ENV=production nodemon server.js",
        "debug": "ndb server.js",
        "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
        "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js"
    },
    "keywords": [
        "cyberwatching.eu",
        "project",
        "radar",
        "EC",
        "H2020"
    ],
    "author": "Michel Drescher (UOXF) <michel.drescher@oerc.ox.ac.uk>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/micheldrescher/cw-project-radar.git"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^1.3.2",
        "express-rate-limit": "^5.0.0",
        "helmet": "^3.21.2",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.8.9",
        "morgan": "^1.9.1",
        "pug": "^2.0.4",
        "slugify": "^1.3.6",
        "validator": "^12.2.0",
        "winston": "^3.2.1",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "ndb": "^1.1.5",
        "nodemon": "^2.0.2",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.17.0"
    },
    "engines": {
        "node": "^13"
    }
}
